<h1>LETS EAT!</h1>

<h2>Pick Your Burger</h2>

<ul>
    {{#each burgers}}
    {{burger_name}} 
    {{/each}}
</ul>

<h2>Burgers you've eaten</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    {{this.burger_name}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div> 

    <button type="submit">Add Burger</button>
</form>